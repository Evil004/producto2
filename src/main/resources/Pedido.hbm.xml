<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.producto2.models.entity.Pedido" table="pedido" schema="paracasa">
        <id name="id" column="id"/>
        <property name="numPedido" column="num_pedido"/>
        <property name="direccion" column="direccion"/>
        <property name="idUsuario" column="id_usuario"/>
    </class>
</hibernate-mapping>